
input data{
    _id: String!
    firstName : String!,
    lastName : String!,
    age : String!,
    dateOfJoining : String!,
    title: String!, 
    department : String!,
    employeeType : String!
}

type Query {
    getEmployees(employeeType: String): [Employee!]!
}

type Employee {
    _id: String!,
    firstName: String!,
    lastName: String!,
    age: String!,
    dateOfJoining: String!,
    title: String! , 
    department: String!,
    employeeType: String!
}

type Mutation{
    addEmployee(firstName: String!, lastName: String!, age: String!, dateOfJoining: String!, 
          title: String!, department: String!, employeeType: String!) : Employee 
    EmployeeDetails(_id: String!) : Employee
    updateEmployee(data: data) : Employee
    deleteEmp(_id: String!) : Employee
    filterEmpByType(employeeType: String!) : Employee
}